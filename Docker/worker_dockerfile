FROM deeppavlov/base-gpu:0.12.0

RUN cd DeepPavlov && \
    git checkout master && \
    git pull && \
    git checkout c5fd6c9f193d5ecb161a6fae0b501071b2e69804 && \
    pip install -e . && \
    python -m deeppavlov install entity_linking_vx_siam_distil

COPY requirements.txt ./

RUN pip install -r requirements.txt

COPY . .

CMD python -m deeppavlov riseapi $(echo entity_linking_vx_siam_distil.json) -p 8000 2>&1 | tee /data/logs/$CONTAINER_NAME_$(date '+%Y-%m-%d-%H-%M-%S-%3N.log')
