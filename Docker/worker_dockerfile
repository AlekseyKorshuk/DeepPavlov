FROM deeppavlov/base-gpu:0.12.0

RUN cd DeepPavlov && \
    git checkout master && \
    git pull && \
    git checkout c3c707afb27c77c82c64b4b97db5ad0f6c270a22 && \
    pip install -e . && \
    python -m deeppavlov install entity_linking_vx_sep

COPY requirements.txt ./

RUN pip install -r requirements.txt

COPY . .

CMD python -m deeppavlov riseapi $(echo entity_linking_vx_sep_cpu.json) -p 8000 2>&1 | tee /data/logs/$CONTAINER_NAME_$(date '+%Y-%m-%d-%H-%M-%S-%3N.log')
