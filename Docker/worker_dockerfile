FROM deeppavlov/base-gpu:0.12.0

COPY requirements.txt ./

RUN pip install -r requirements.txt

RUN cd DeepPavlov && \
    git checkout master && \
    git pull && \
    git checkout 9f40bc334cc1b7c65ab3baeaf3bbfad9cc1fc884 && \
    pip install -e .

COPY . .

CMD python -m deeppavlov riseapi $(echo entity_linking_vx_siam_distil.json) -p 8000 2>&1 | tee /data/logs/$CONTAINER_NAME_$(date '+%Y-%m-%d-%H-%M-%S-%3N.log')
