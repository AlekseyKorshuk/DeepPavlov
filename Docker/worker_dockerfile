FROM deeppavlov/base-gpu:0.12.0

RUN cd DeepPavlov && \
    git checkout master && \
    git pull && \
    git checkout 38a70682cc4de8d9b348a0437f432db7cfb4d6d2 && \
    pip install -e . && \
    python -m deeppavlov install entity_linking_vx_siam

COPY requirements.txt ./

RUN pip install -r requirements.txt

COPY . .

CMD python -m deeppavlov riseapi $(echo entity_linking_vx_siam.json) -p 8000 2>&1 | tee /data/logs/$CONTAINER_NAME_$(date '+%Y-%m-%d-%H-%M-%S-%3N.log')
