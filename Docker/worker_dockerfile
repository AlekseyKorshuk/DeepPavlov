FROM deeppavlov/base-gpu:0.12.0

COPY requirements.txt ./

RUN pip install -r requirements.txt

RUN cd DeepPavlov && \
    git checkout master && \
    git pull && \
    git checkout 3421fac496ca55c133af2330c389dd1e56f86d4f && \
    pip install -e .

COPY . .

CMD python -m deeppavlov riseapi $(echo entity_linking_vx_siam_distil.json) -p 8000 2>&1 | tee /data/logs/$CONTAINER_NAME_$(date '+%Y-%m-%d-%H-%M-%S-%3N.log')
