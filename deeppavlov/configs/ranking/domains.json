{
  "dataset_reader": {
    "class_name": "in_batch_ranking_reader",
    "data_path": "{DOWNLOADS_PATH}/domains/domain_dataset.pickle"
  },
  "dataset_iterator": {
    "class_name": "basic_classification_iterator"
  },
  "chainer": {
    "in": ["source_id", "target_id", "text", "entities", "entities_inters"],
    "in_y": ["class"],
    "pipe": [
      {
        "in": ["text", "entities", "entities_inters", "class"],
        "out": ["text_features", "labels"],
        "class_name": "adopting_preprocessor",
        "max_seq_length": 512,
        "vocab_file": "{TRANSFORMER}"
      },
      {
        "class_name": "copy_define_model",
        "in": ["source_id", "target_id", "text_features"],
        "in_y": ["labels"],
        "out": ["model_output"],
        "save_path": "{MODEL_PATH}/model",
        "load_path": "{MODEL_PATH}/model",
        "encoder_save_path": "{MODEL_PATH}/encoder",
        "model_name": "copy_define_model",
        "pretrained_bert": "{TRANSFORMER}",
        "learning_rate_drop_patience": 30,
        "learning_rate_drop_div": 1.5
      }
    ],
    "out": ["model_output"]
  },
  "train": {
    "epochs": 50,
    "batch_size": 10,
    "train_metrics": ["acc"],
    "metrics": ["acc"],
    "validation_patience": 100,
    "val_every_n_batches": 50,
    "log_every_n_batches": 50,
    "evaluation_targets": ["valid", "train"],
    "show_examples": false,
    "ranking_prepr": true,
    "class_name": "torch_trainer"
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "TRANSFORMER": "DeepPavlov/rubert-base-cased",
      "MODEL_PATH": "{MODELS_PATH}/copy_define"
      },
    "download": [
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/domain_graph/domain_dataset.pickle",
        "subdir": "{DOWNLOADS_PATH}/domains"
      },
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/domain_graph/copy_define.tar.gz",
        "subdir": "{MODELS_PATH}/copy_define"
      }
    ]
  }
}
