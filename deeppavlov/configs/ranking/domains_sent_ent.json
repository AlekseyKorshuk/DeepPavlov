{
  "dataset_reader": {
    "class_name": "in_batch_ranking_reader",
    "valid_size": 400,
    "data_path": "{DOWNLOADS_PATH}/domains/domain_dataset_ent.pickle"
  },
  "dataset_iterator": {
    "class_name": "copy_domain_iterator",
    "batch_size": 10
  },
  "chainer": {
    "in": ["source_id", "target_id", "text", "entities", "nouns", "topics", "entities_sent"],
    "in_y": ["class", "entities_inters", "topics_inters", "sentiment"],
    "pipe": [
      {
        "in": ["text", "entities", "nouns", "entities_inters", "topics", "topics_inters", "class", "entities_sent"],
        "out": ["cls_labels", "text_features", "topic_ind", "topic_labels", "token_ind", "token_labels",
                "topic_token_dict", "token_dict", "entities_ind_sent"],
        "class_name": "adopting_ind_preprocessor",
        "max_seq_length": 512,
        "vocab_file": "{TRANSFORMER}",
        "return_sent": true
      },
      {
        "class_name": "copy_define_model_ind",
        "in": ["source_id", "target_id", "text_features", "entities_ind_sent", "topic_ind", "token_ind"],
        "in_y": ["cls_labels", "topic_labels", "token_labels", "sentiment"],
        "out": ["copy_or_not", "copy_or_not_conf", "topic_pred", "token_pred", "sent_pred"],
        "save_path": "{MODEL_PATH}/model",
        "load_path": "{MODEL_PATH}/model",
        "encoder_save_path": "{MODEL_PATH}/encoder",
        "emb_save_path": "{MODEL_PATH}",
        "model_name": "copy_define_model",
        "pretrained_bert": "{TRANSFORMER}",
        "learning_rate_drop_patience": 5,
        "learning_rate_drop_div": 1.5,
        "num_embeddings": 862
      },
      {
        "class_name": "copy_define_postprocessor",
        "in": ["copy_or_not", "copy_or_not_conf", "topic_pred", "token_pred", "topic_token_dict", "token_dict", "sent_pred"],
        "out": ["model_output"]
      }
    ],
    "out": ["model_output"]
  },
  "train": {
    "epochs": 50,
    "batch_size": 10,
    "train_metrics": ["domain_acc", "topic_acc", "token_acc", "mse"],
    "metrics": ["domain_acc", "topic_acc", "token_acc", "mse"],
    "validation_patience": 8,
    "val_every_n_batches": 50,
    "log_every_n_batches": 50,
    "evaluation_targets": ["valid", "train"],
    "show_examples": false,
    "ranking_prepr": true,
    "class_name": "torch_trainer"
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "TRANSFORMER": "{DOWNLOADS_PATH}/torch_bert_models/rubert_base_cased",
      "MODEL_PATH": "{MODELS_PATH}/copy_define_ent"
      },
    "download": [
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/domain_graph/domain_dataset_ent.pickle",
        "subdir": "{DOWNLOADS_PATH}/domains"
      },
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/entity_linking/rubert_base_cased.tar.gz",
        "subdir": "{DOWNLOADS_PATH}/torch_bert_models/rubert_base_cased"
      },
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/domain_graph/copy_define_ent.tar.gz",
        "subdir": "{MODELS_PATH}/copy_define_ent"
      }
    ]
  }
}
