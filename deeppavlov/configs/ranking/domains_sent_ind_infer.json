{
  "chainer": {
    "in": ["source", "target", "source_topics", "target_topics", "text", "entities", "nouns", "topics_with_probs", "entities_sent"],
    "pipe": [
      {
        "in": ["source", "target", "source_topics", "target_topics"],
        "out": ["source_id", "target_id"],
        "class_name": "domain_preprocessor",
        "domain_to_ind_filename": "{DOWNLOADS_PATH}/domains/domain_to_ind.json",
        "domain_topics_filename": "{DOWNLOADS_PATH}/domains/domain_topics_dict.json"
      },
      {
        "in": ["text", "entities", "nouns", "entities", "topics_with_probs", "entities_sent"],
        "out": ["text_features", "topic_ind", "token_ind", "topic_token_dict", "token_dict", "entities_ind_sent"],
        "class_name": "adopting_ind_infer_preprocessor",
        "max_seq_length": 512,
        "vocab_file": "{TRANSFORMER}",
        "return_sent": true
      },
      {
        "class_name": "copy_define_model_ind",
        "in": ["source_id", "target_id", "text_features", "entities_ind_sent", "topic_ind", "token_ind"],
        "out": ["copy_or_not", "copy_or_not_conf", "topic_pred", "token_pred", "sent_pred"],
        "save_path": "{MODEL_PATH}/model",
        "load_path": "{MODEL_PATH}/model",
        "encoder_save_path": "{MODEL_PATH}/encoder",
        "emb_save_path": "{MODEL_PATH}",
        "model_name": "copy_define_model",
        "pretrained_bert": "{TRANSFORMER}",
        "learning_rate_drop_patience": 30,
        "learning_rate_drop_div": 1.5
      },
      {
        "class_name": "copy_define_ind_infer_postprocessor",
        "in": ["copy_or_not", "copy_or_not_conf", "topic_pred", "topics_with_probs", "token_pred",
               "topic_token_dict", "token_dict", "sent_pred"],
        "out": ["model_output"]
      }
    ],
    "out": ["model_output"]
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "/archive/evseev/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "TRANSFORMER": "DeepPavlov/rubert-base-cased",
      "MODEL_PATH": "{MODELS_PATH}/copy_define_ind"
      },
    "download": [
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/domain_graph/domain_to_ind.json",
        "subdir": "{DOWNLOADS_PATH}/domains"
      },
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/domain_graph/domain_topics_dict.json",
        "subdir": "{DOWNLOADS_PATH}/domains"
      },
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/domain_graph/copy_define_ind_new.tar.gz",
        "subdir": "{MODELS_PATH}/copy_define_sent"
      }
    ]
  }
}
