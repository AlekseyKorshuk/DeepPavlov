{
  "dataset_reader": {
    "class_name": "rel_ranking_reader",
    "data_path": "{DOWNLOADS_PATH}/entity_ranking_bert_rus_no_mention",
    "do_lower_case": false
  },
  "dataset_iterator": {
    "class_name": "siamese_iterator",
    "seed": 243,
    "len_valid": 500
  },
  "chainer": {
    "in": ["texts_a", "texts_b"],
    "in_y": ["labels"],
    "pipe": [
      {
        "in": ["texts_a"],
        "out": ["texts_a_features", "entity_tokens_pos"],
        "class_name": "torch_transformers_batch_preprocessor",
        "max_seq_length": 512,
        "vocab_file": "{TRANSFORMER}",
        "add_special_tokens": ["[ENT]"],
        "special_token_id": 119547,
        "return_special_tokens_pos": true
      },
      {
        "in": ["texts_b"],
        "out": ["texts_b_features"],
        "class_name": "torch_transformers_batch_preprocessor",
        "max_seq_length": 512,
        "vocab_file": "{TRANSFORMER}"
      },
      {
        "class_name": "siamese_bert_el_ranker",
        "in": ["texts_a_features", "texts_b_features", "entity_tokens_pos"],
        "in_y": ["labels"],
        "out": ["model_output"],
        "save_path": "{MODEL_PATH}/model",
        "load_path": "{MODEL_PATH}/model",
        "text_encoder_save_path": "{MODEL_PATH}/text_encoder",
        "descr_encoder_save_path": "{MODEL_PATH}/descr_encoder",
        "bilinear_save_path": "{MODEL_PATH}/bilinear",
        "model_name": "siamese_ranking_el_model",
        "pretrained_bert": "{TRANSFORMER}",
        "learning_rate_drop_patience": 10,
        "learning_rate_drop_div": 1.5,
        "return_probas": true
      }
    ],
    "out": ["model_output"]
  },
  "train": {
    "epochs": 50,
    "batch_size": 25,
    "train_metrics": ["f1_weighted", "acc"],
    "metrics": ["f1_weighted", "acc"],
    "validation_patience": 100,
    "val_every_n_batches": 100,
    "log_every_n_batches": 100,
    "evaluation_targets": ["valid", "train"],
    "show_examples": false,
    "class_name": "torch_trainer"
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "TRANSFORMER": "DeepPavlov/rubert-base-cased",
      "MODEL_PATH": "{MODELS_PATH}/siamese_bert_el_ranking"
      },
    "download": [
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/relation_extraction/rured.tar.gz",
        "subdir": "{DOWNLOADS_PATH}/rured"
      },
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/relation_extraction/re_rured_model.tar.gz",
        "subdir": "{MODELS_PATH}/re_rured"
      }
    ]
  }
}
